    > .member-meta1, .member-meta2
      background-color #ecf0f1
  [data-member='blue']
    > .member-avatar
      background-image url("/images/avatar/eric-gs.png")
    > .member-meta1, .member-meta2
      background-color #3498db
  [data-member='gs']
    > .member-avatar
      background-image url("/images/avatar/gs-gs.png")
    > .member-meta1, .member-meta2
      background-color #e67e22
  [data-member='yswu']
    > .member-avatar
