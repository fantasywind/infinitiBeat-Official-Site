    -webkit-transform rotate(-90deg) translateY(-70px)
    transform rotate(-90deg) translateY(-70px)
  }
  100% {
    -ms-transform rotate(-180deg) translateY(-140px)
    -o-transform rotate(-180deg) translateY(-140px)
    -moz-transform rotate(-180deg) translateY(-140px)
    -webkit-transform rotate(-180deg) translateY(-140px)
    transform rotate(-180deg) translateY(-140px)
  }
