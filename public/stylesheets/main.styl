@-moz-keyframes circle_meta1
  0% { 
    -moz-transform rotate(0deg) translateY(0px)
    transform rotate(0deg) translateY(0px)
  }
  50% {
    -moz-transform rotate(-90deg) translateY(-70px)
    transform rotate(-90deg) translateY(-70px)
  }
  100% {
    -moz-transform rotate(-180deg) translateY(-140px)
    transform rotate(-180deg) translateY(-140px)
  }
@-webkit-keyframes circle_meta1
  0% { 
    -webkit-transform rotate(0deg) translateY(0px)
    transform rotate(0deg) translateY(0px)
  }
  50% {
    -webkit-transform rotate(-90deg) translateY(-70px)
    transform rotate(-90deg) translateY(-70px)
  }
  100% {
    -webkit-transform rotate(-180deg) translateY(-140px)
    transform rotate(-180deg) translateY(-140px)
  }
