html, body
  height 100%
  background-color rgb(76, 76, 74)
.container
  width 960px
  margin 0 auto
#header
  padding 105px 0 30px 60px
#logo
  margin 0 auto
  background-image url("/images/logo.png")
  width 520px
  height 139px
  position relative
  z-index 999
.member-avatar
  cursor pointer
.member-avatar, .member-meta1, .member-meta2
  display block
  width 150px
  height 150px
  border-radius 75px
  background-color #DDD
  position relative
  z-index 10
.member-meta1
  z-index 9
  top -150px
  > span
    display inline-block
    margin 64px 0 0 33px
    font-size 1.5em
    letter-spacing 0.25em
.member-meta2
  z-index 8
  top -300px
  > span
    display inline-block
    margin 69px 0 0 30px
    font-size 1em
#members
  list-style none
  margin-top 165px
  width 100%
  > li
    float left
    margin 0 20px
  [data-member='chaiyupai']
    > .member-avatar
      background-image url("/images/avatar/chaiyupai-gs.png")
    > .member-meta1, .member-meta2
      background-color #1abc9c
  [data-member='eric']
    > .member-avatar
